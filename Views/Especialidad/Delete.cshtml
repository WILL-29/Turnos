@model Turnos.Models.Especialidad
<h3>¿Estás seguro que deseas eliminar esta especialidad?</h3>
<div>
    <div class="row">
        <div class="col s12 m6">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
            <span class="card-title">@Model.Descripcion</span>
            <div class="card-action">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ID_Especialidad"/>                              
                    <button class="btn waves-effect waves-light" type="submit" name="action">eliminar
                        <i class="material-icons right">send</i>
                     </button>

                    <a asp-action="Index" class="waves-effect waves-light btn">Volver</a>
                </form>
            </div>
        </div>
        </div>
    </div>
</div>