@model Turnos.Models.Especialidad
<h3>¿Estás seguro que deseas eliminar esta especialidad?</h3>
    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title"><b> @Model.Descripcion </b></span>
                </div>
                <div class="card-action blue-grey darken-3 col s12">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ID_Especialidad"/>  
                        <div class="col s6">
                            <button class="btn waves-effect waves-light" type="submit" name="action">eliminar
                                <i class="material-icons right">send</i>
                            </button>
                        </div>                            
                        <div class="col s6">
                            <button class="btn waves-effect waves-light" asp-controller="Especialidad" asp-action="Index">
                                Volver
                                <i class="material-icons right">undo</i>
                            </button>
                        </div>                        
                    </form>
                </div>
            </div>
        </div>
    </div>