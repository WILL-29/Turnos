@model Turnos.Models.Login
@using Microsoft.AspNetCore.Http;
@{
    if (Context.Session.GetString("usuario") != null)
    {
        Context.Response.Redirect("/Home");
    }
}
@{ Layout = null;}

    <!-- Estas son las librerías de Materialize ->
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="~/css/materialize.min.css"  media="screen,projection"/>

    @* Esta es otra librería de materialize *@
    <script type="text/javascript" src="~/js/materialize.min.js"></script>


<div class="container">
    <h4>Iniciar Sesión</h4>
    <hr>
    <br>
    <form class="col s12" asp-action="Login">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <div class="input-field col s6">            
                <i class="material-icons prefix">person_pin</i>
                <label asp-for="Usuario"></label>
                <input asp-for="Usuario" type="text">
                <span asp-validation-for="Usuario"></span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">vpn_key</i>
                <label asp-for="Password"></label>
                <input asp-for="Password" type="Password">
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <span class="red-text">@ViewBag.errorLogin</span>
        <br><br>        
        <div class="row">
            <div class="col s6 m6">
                <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">
                    Iniciar Sesión
                    <i class="material-icons right">send</i>
                </button>
            </div>            
        </div>
    </form>
</div>