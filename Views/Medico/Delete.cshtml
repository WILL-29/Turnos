@model Turnos.Models.Medico
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar</title>
</head>
<body>
<h4>Médicos</h4>
    <div>
        <h3>¿Seguro que desea eliminar el siguiente médico?</h3>
        <hr />
        <div class="row">
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title"><h5><b>@Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.Apellido)</b></h5></span>
                        <dl class="row">
                            <dt>
                                @Html.DisplayNameFor(model => model.Direccion): @Html.DisplayFor(model => model.Direccion)
                            </dt>
                            <hr>
                            <dt>
                                @Html.DisplayNameFor(model => model.Tel): @Html.DisplayFor(model => model.Tel)
                            </dt>
                            <hr>
                            <dt>
                                @Html.DisplayNameFor(model => model.Email): @Html.DisplayFor(model => model.Email)
                            </dt>
                            <hr>
                            <dt>
                                @Html.DisplayNameFor(model => model.HorarioDesde): @Html.DisplayFor(model => model.HorarioDesde)
                            </dt>
                            <hr>
                            <dt>
                                @Html.DisplayNameFor(model => model.HorarioHasta): @Html.DisplayFor(model => model.HorarioHasta)
                            </dt>
                            <hr>
                        </dl>
                    </div>
                    <div class="card-action blue-grey darken-3 col s12">                                                
                        <form asp-action="Delete">
                            <div class="col s6">                               
                                    <!-- Este anchor ref no funciona porque para usar un método tipo post se debe enviar a travez de un Form y un botón submit(Input o button)
                                    <a asp-action="Delete" asp-route-id="@Model.ID_Medico">Confirmar</a> -->
                                    <button class="waves-effect waves-light btn" type="submit" asp-for="ID_Medico">
                                        Confirmar
                                        <i class="material-icons right">send</i>
                                    </button>                                
                            </div>                                                      
                            <div class="col s6">
                                <button asp-controller="Medico" asp-action="Index" class="waves-effect waves-light btn">
                                    Cancelar
                                    <i class="material-icons left">undo</i>
                                </button>
                            </div>   
                        </form>                     
                    </div>
                </div>
            </div>
        </div>  
    </div>
</body>
</html>
