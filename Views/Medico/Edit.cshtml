@model Turnos.Models.Medico
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Medico</h4>
<hr/>
<div class="row">    
        <form asp-action="Edit" class="col s12">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="ID_Medico" />
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input asp-for="Nombre" type="text" class="validate">
                    <label asp-for="Nombre"></label>
                    <span asp-validation-for="Nombre"></span>
                </div>
                <div class="input-field col s6">
                    <input asp-for="Apellido" type="tel" class="validate">
                    <label asp-for="Apellido"></label>
                    <span asp-validation-for="Nombre"></span>
                </div>
            </div>
            <div class="input-field col s12">
                    <i class="material-icons prefix">home</i>
                    <input asp-for="Direccion" type="text" class="validate">
                    <label asp-for="Direccion"></label>
                    <span asp-validation-for="Direccion"></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">phone</i>
                    <input asp-for="Tel" type="tel" class="validate">
                    <label asp-for="Tel"></label>
                    <span asp-validation-for="Tel"></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">email</i>
                    <input asp-for="Email" type="email" class="validate">
                    <label asp-for="Email"></label>
                    <span asp-validation-for="Email"></span>
                </div>
            <div class="input-field col s6">
                <i class="material-icons prefix">calendar_month</i>
                <!-- <label asp-for="HorarioDesde">Desde</label> -->
                <input asp-for="HorarioHasta" type="text"class="timepicker">
                <span asp-validation-for="HorarioDesde"></span>
            </div>
            <div class="input-field col s6">
                <i class="material-icons prefix">calendar_month</i>
                <!-- <label asp-for="HorarioHasta">Hasta</label> -->
                <input asp-for="HorarioHasta" type="text" class="timepicker">
                <span asp-validation-for="HorarioHasta"></span>
            </div>

            <div class="input-field col s12">
                <i class="material-icons prefix">star_rate</i>
                <select name="ID_Especialidad" class="form-control" asp-items="ViewBag.ListaEspecialidades"></select>
            </div>

            <div class="row">
                <div class="col s6 m6">
                    <button class="btn waves-effect waves-light" type="submit" name="action">Guardar
                        <i class="material-icons right">send</i>
                     </button>
                </div>
                <div class="col s6 m6">
                    <a asp-action="Index" class="waves-effect waves-light btn"><i class="material-icons left">undo</i> Volver a la lista</a>
                </div>
            </div>
        </form>
</div>
</body>
</html>
