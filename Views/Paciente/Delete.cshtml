@model Turnos.Models.Paciente
<h4>Paciente</h4>
<hr>
<h5>Â¿Seguro que desea eliminar este registro?</h5>
<div>
    <div>
        <div class="row">
            <div class="col s12 m6">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title"><h5><b>@Html.DisplayFor(modelo => modelo.Nombre) @Html.DisplayFor(modelo => modelo.Apellido)</h5></b></span>
                        <dl>
                            <dt>
                                <b>@Html.DisplayNameFor(modelo => modelo.Direccion) :</b> @Html.DisplayFor(modelo => modelo.Direccion)
                            </dt>
                            <hr>
                            <dt>
                                <b>@Html.DisplayNameFor(modelo => modelo.Telefono) :</b> @Html.DisplayFor(modelo => modelo.Telefono)
                            </dt>
                            <hr>
                            <dt>
                                <b>@Html.DisplayNameFor(modelo => modelo.Email) :</b> @Html.DisplayFor(modelo => modelo.Email)
                            </dt>
                            <hr>
                        </dl>
                    </div>
                    <div class="card-action blue-grey darken-3 col s12">                        
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="ID_Paciente">                                
                                    <div class="col s6">
                                        <button class="btn waves-effect waves-light" type="submit" name="action">Eliminar
                                        <i class="material-icons right">send</i>
                                        </button>
                                    </div>
                                    <div class="col s6">
                                        <a class="btn waves-effect waves-light" asp-action="Index">Cancelar</a>
                                    </div>
                            </form>                        
                    </div>
                </div>
            </div>
        </div>
    </div>
        
</div>