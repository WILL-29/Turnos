@model Turnos.Models.Paciente;

<h4>Paciente</h4>
<hr>
<div>
    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title"><h5><b>@Html.DisplayFor(modelo => modelo.Nombre) @Html.DisplayFor(modelo => modelo.Apellido)</h5></b></span>
                     <dl>
                        <dt>
                            <b>@Html.DisplayNameFor(modelo => modelo.Direccion) :</b> @Html.DisplayFor(modelo => modelo.Direccion)
                        </dt>
                        <hr>
                        <dt>
                            <b>@Html.DisplayNameFor(modelo => modelo.Telefono) :</b> @Html.DisplayFor(modelo => modelo.Telefono)
                        </dt>
                        <hr>
                        <dt>
                            <b>@Html.DisplayNameFor(modelo => modelo.Email) :</b> @Html.DisplayFor(modelo => modelo.Email)
                        </dt>
                        <hr>
                    </dl>
                </div>
                <div class="card-action">
                    <a asp-controller="Paciente" asp-action="Edit" asp-route-id="@Model.ID_Paciente">Editar</a>
                    <a asp-action="Index">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>